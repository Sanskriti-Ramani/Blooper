<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sanskriti.blooper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MovieActivityPackage.AboutMovieActivity" />
        <activity android:name=".Activities.MovieActivityPackage.FullViewActivity" />
        <activity android:name=".Activities.ReviewActivity" />
        <activity android:name=".Activities.CreditPageActivity" />
        <activity android:name=".Activities.TvActivityPackage.FullViewActivity" />
        <activity android:name=".Activities.TvActivityPackage.AboutTvActivity" />
        <activity android:name=".Activities.SearchActivity"></activity>
    </application>

</manifest>